<h1>Repos</h1>

<%= @hue.inspect %>

<h1>Members</h1>
<% @members.each do |member| %>

  <%= link_to admin_member_path(params[:organization], member.name) do %>
    <div class="member">
      <%= member.name %>
      <%= image_tag member.avatar_url, width: 200, height: 200 %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Sync Github', admin_sync_github_path %>

<%= form_tag(admin_sync_slack_path, method: :get) do |f| %>
  Slack Token: <%= text_field_tag :token %>
  <%= submit_tag 'Sync Slack' %>
<% end %>
